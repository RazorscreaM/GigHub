@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1 class="text-white">@Model.Heading</h1>

<div class="jumbotron">


    <ul class="gigs">
        @foreach (var gig in Model.UpComingGigs)
        {
            <li>
                @*(div.date>div.month+div.day)+(div.details>span.artist+span.genre)*@
                <div class="date">
                    <div class="month">
                        @gig.DateTime.ToString("MMM")
                    </div>
                    <div class="day">
                        @gig.DateTime.ToString("d ")
                    </div>
                </div>
                <div class="details">
                    <span class="artist">
                        @gig.Artist.Name
                        @if (Model.ShowActions)
                        {
                            <button data-user-id="@gig.ArtistId" class="btn btn-link btn-sm js-toggle-follow">
                                Follow
                            </button>
                        }

                    </span>
                    <span class="genre">
                        @gig.Genre.Name
                    </span>
                    @if (Model.ShowActions)
                {
                        <button data-gig-id="@gig.Id" class="btn btn-default btn-sm js-toggle-attendance pull-right">
                            Going ?
                        </button>
                    }

                </div>
            </li>
            <hr style="color: black"/>
        }

    </ul>

</div>



@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("Something went wrong!");
                    });
            });
            
            //zdesi vozmojno error
            $(".js-toggle-follow").click(function (e) {
                debugger;
                var button = $(e.target);
                $.post("/api/following", { followeeId: button.attr("data-user-id") })
                    .done(function () {
                        button.text("Following");
                    })
                    .fail(function () {
                        alert("Something failed");
                    });
            });

        });



    </script>
}
